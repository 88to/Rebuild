<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="@color/smoke_black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/drag_view"
        android:background="@color/base_color_light_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sliding_up_panel_height">

        <TextView
            android:text="SlidingUpPanelLayout"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/smoke_black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/bg_rebuild"
            android:layout_width="match_parent"
            android:layout_height="140dp" />

        <TextView
            android:id="@+id/episode_title"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_episode_title"
            android:padding="@dimen/padding_contents"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </FrameLayout>

    <TextView
        android:id="@+id/episode_description"
        android:padding="@dimen/padding_frame"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:background="@color/base_color_light_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sliding_up_panel_height"/>
</LinearLayout>