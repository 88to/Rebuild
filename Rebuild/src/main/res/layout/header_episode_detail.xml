<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:background="@drawable/miyagawa_in_yapc"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        />
    <FrameLayout
        android:id="@+id/episode_detail_header_cover"
        android:background="@color/smoke_black"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        >
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/episode_like_button"
            android:background="@drawable/episode_like_button"
            android:layout_margin="@dimen/margin_icon_button"
            android:layout_width="@dimen/ic_button_secondary"
            android:layout_height="@dimen/ic_button_secondary"
            />
        <ImageView
            android:id="@+id/episode_share_button"
            android:background="@drawable/episode_share_button"
            android:layout_margin="@dimen/margin_icon_button"
            android:layout_width="@dimen/ic_button_secondary"
            android:layout_height="@dimen/ic_button_secondary"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/smoke_white"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:background="@drawable/media_play_button"
            android:layout_margin="@dimen/margin_icon_button"
            android:layout_gravity="center"
            android:layout_width="@dimen/ic_button_primary"
            android:layout_height="@dimen/ic_button_primary"
            />
        <TextView
            android:id="@+id/episode_title"
            android:textSize="@dimen/primary_text_size"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_contents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</FrameLayout>
