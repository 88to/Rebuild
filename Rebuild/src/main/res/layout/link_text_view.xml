<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:padding="@dimen/padding_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
            android:id="@+id/site_thumbnail"
            android:src="@drawable/ic_launcher"
            android:layout_width="@dimen/list_item_show_note_height"
            android:layout_height="@dimen/list_item_show_note_height"
            />
    <TextView
            android:id="@+id/show_note_title"
            android:textSize="@dimen/secondary_text_size"
            android:layout_marginLeft="@dimen/padding_frame"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_show_note_height"
            />
</LinearLayout>
