<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/padding_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="@dimen/padding_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/episode_title"
                android:lines="2"
                android:ellipsize="end"
                android:textSize="@dimen/primary_text_size"
                android:textStyle="bold"
                android:layout_marginLeft="56dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/episode_subtitle"
            android:padding="@dimen/padding_contents"
            android:background="@color/base_color_light_gray"
            android:textSize="@dimen/secondary_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/episode_posted_at"
        android:textSize="@dimen/secondary_text_size"
        android:textColor="@android:color/white"
        android:background="@drawable/posted_at_circle"
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="60dp" />

</FrameLayout>