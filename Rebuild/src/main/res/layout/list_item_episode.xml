<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingLeft="@dimen/padding_frame"
        android:paddingTop="@dimen/padding_frame"
        android:paddingRight="@dimen/padding_contents"
        android:paddingBottom="@dimen/padding_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray_and_clickable"
        >
    <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <RelativeLayout
                android:padding="@dimen/padding_frame"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:minHeight="@dimen/episode_posted_at_text_shape_size"
                android:layout_height="wrap_content"
                >
            <TextView
                    android:id="@+id/episode_title"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="@dimen/primary_text_size"
                    android:textStyle="bold"
                    android:layout_marginLeft="56dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_contents"
                android:background="@color/base_color_light_gray"
                >
            <TextView
                    android:id="@+id/episode_subtitle"
                    android:textSize="@dimen/quaternary_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            <rejasupotaro.rebuild.views.FontAwesomeTextView
                    android:id="@+id/episode_download_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/padding_frame"
                    android:paddingBottom="@dimen/padding_frame"
                    android:paddingLeft="@dimen/padding_contents"
                    android:paddingRight="@dimen/padding_contents"
                    android:layout_marginTop="@dimen/padding_frame"
                    android:background="@drawable/episode_state_button"
                    android:textSize="@dimen/quaternary_text_size"
                    android:textColor="@android:color/white"
                    android:text="@string/downloaded"
                    android:visibility="gone"
                    />
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/episode_posted_at"
            android:textSize="@dimen/quaternary_text_size"
            android:textColor="@android:color/white"
            android:background="@drawable/posted_at_circle"
            android:gravity="center"
            android:layout_width="@dimen/episode_posted_at_text_shape_size"
            android:layout_height="@dimen/episode_posted_at_text_shape_size"
            />
</FrameLayout>
