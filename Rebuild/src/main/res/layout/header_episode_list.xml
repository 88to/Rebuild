<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/episode_list_header_height"
            android:src="@drawable/bg_rebuild"
            android:scaleType="centerCrop"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <LinearLayout
                android:id="@+id/app_title_text"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/padding_contents"
                android:layout_marginRight="@dimen/padding_contents"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                >
            <TextView
                    android:text="@string/app_name"
                    android:textSize="28sp"
                    style="@style/RebuildLogText"
                    />
            <TextView
                    android:text="@string/rebuild_description"
                    android:textSize="8sp"
                    android:textStyle="normal"
                    style="@style/RebuildLogText"
                    />
        </LinearLayout>
        <rejasupotaro.rebuild.views.RecentlyTweetView
                android:id="@+id/recently_tweet_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header_link_text"
                />
    </LinearLayout>
</FrameLayout>
