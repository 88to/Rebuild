<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/episode_list_header_height"
            >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_rebuild"
                android:scaleType="centerCrop"
                />
        <LinearLayout
                android:id="@+id/app_title_text"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_contents"
                android:layout_marginRight="@dimen/padding_contents"
                >
            <TextView
                    android:text="@string/rebuild_description"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    style="@style/RebuildLogText"
                    />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/header_link_text"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header_link_text"
                android:padding="@dimen/padding_frame"
                >
            <rejasupotaro.rebuild.views.FontAwesomeTextView
                    android:id="@+id/link_text_twitter"
                    android:text="@string/label_timeline"
                    android:layout_marginLeft="3dp"
                    style="@style/HeaderLinkText"
                    />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
